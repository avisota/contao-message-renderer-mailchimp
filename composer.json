  "keywords": [
    "avisota",
    "email",
    "mail",
    "newsletter",
    "marketing"
  ],
  "type": "contao-module",
  "homepage": "http://avisota.org",
  "license": "LGPL-3.0+",
  "authors": [
    {
      "name": "Tristan Lins",
      "email": "tristan.lins@bit3.de",
