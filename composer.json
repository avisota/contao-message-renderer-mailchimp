  "support": {
    "email": "support@avisota.de",
    "issues": "https://github.com/avisota/contao-renderer-mail-chimp/issues",
    "forum": "https://community.contao.org/de/forumdisplay.php?121-Avisota",
    "wiki": "http://de.contaowiki.org/Kategorie:Avisota",
    "irc": "irc://irc.freenode.org/avisota",
    "source": "https://github.com/avisota/contao-renderer-mail-chimp"
  },
  "require": {
    "php": ">=5.3",
    "avisota/contao-core": "~2.0",
    "avisota/contao-message": "~2.0",
    "contao-community-alliance/composer-plugin": "~2.0",
    "contao/core": ">=2.11.11,<3.5"
  },
  "require-dev": {
    "phpunit/phpunit": "3.7.*",
    "squizlabs/php_codesniffer": "1.*",
    "bit3/php-coding-standard": "~2.2"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-0": {
      "Avisota\\Contao\\Message\\Renderer\\MailChimp": "src/"
