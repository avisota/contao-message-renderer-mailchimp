{% extends 'avisota/message/renderer/mailchimp/mce_container.html.twig' %}
{% import "avisota/message/renderer/mailchimp/mce_macros.html.twig" as mce %}

{% set headline = headline|deserialize(true) %}
{% set hl = headline.unit ? headline.unit : 'h1' %}
{% set headline = headline.value %}

{% block content %}
	{% spaceless %}
		{% if headline %}
			<tr>
				<td><{{ hl }}>{{ headline }}</{{ hl }}></td>
			</tr>
		{% endif %}
		<tr>
			<td>
				<table width="100%" border="0" cellpadding="0" cellspacing="0">
					{% if addImage and (floating == 'above') %}
						<tr>
							<td>
								{{ mce.image(singleSRC, { 'alt': alt, 'float': floating, 'size': size, 'margin': imagemargin, 'url': imageUrl, 'caption': caption }) }}
							</td>
						</tr>
					{% endif %}

					<tr>
						{% if addImage and (floating == 'left') %}
							<td>
								{{ mce.image(singleSRC, { 'alt': alt, 'float': floating, 'size': size, 'margin': imagemargin, 'url': imageUrl, 'caption': caption }) }}
							</td>
						{% endif %}
						<td>{{ text }}</td>
						{% if addImage and (floating == 'right') %}
							<td>
								{{ mce.image(singleSRC, { 'alt': alt, 'float': floating, 'size': size, 'margin': imagemargin, 'url': imageUrl, 'caption': caption }) }}
							</td>
						{% endif %}
					</tr>

					{% if addImage and floating == 'below' %}
						<tr>
							<td>
								{{ mce.image(singleSRC, { 'alt': alt, 'float': floating, 'size': size, 'margin': imagemargin, 'url': imageUrl, 'caption': caption }) }}
							</td>
						</tr>
					{% endif %}
				</table>
			</td>
		</tr>
	{% endspaceless %}
{% endblock %}
